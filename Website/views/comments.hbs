    $('.nav-item-b a').addClass("active");

    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>
<div class="form-check form-switch" style="float: right;">
  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" align="right" name="radioButton" value="hello"/>
</div>
<script>
  const darkmode =  new Darkmode();
  document.getElementById("flexSwitchCheckDefault").addEventListener("click", function() {
      darkmode.toggle();  
      if(darkmode.isActivated()) {
          $('#modaldark').removeClass("bg-light");
          $('#modaldark').addClass("bg-dark");
      };
      if(!darkmode.isActivated()) {
          $('#modaldark').removeClass("bg-dark");
          $('#modaldark').addClass("bg-light");
      };
  });
</script>
<div class="container overflow-hidden">
    <section class="specify">
        <form action="/comments" method="post" class="needs-validation" novalidate>

            <!-- Comment/Bug Textbox -->
            <div class="col-sm mb-2 mt-4">
                <textarea class="form-control test" type="text" id="bugs" name="comments" size="60"
                          placeholder="Comments or Bugs" required></textarea>
                <div class="invalid-tooltip" style="position: relative">Please input a comment or bug about the website.</div>
            </div>
            <div class="row justify-content-end mt-2 align-self-end">
                <div class="col col-sm-auto d-grid">
                    <table>
                        <td>

                            <!-- Button to call on Help Tutorial Modal -->
                            <span class="d-inline-block" data-toggle="modal" data-target="#myModal1">
                                <button type="button" class="btn" data-container="body" data-toggle="modal" id="help"
                                        disabled>
                                    <img src="images/Help_Icon.png" alt="help" id="image"> <small id="image">Help</small>
                                </button>
                            </span>

                            <!-- Contents of Help Tutorial Modal -->
                            <div class="modal fade" id="myModal1" tabindex="-1" role="dialog"
                                 aria-labelledby="myModalLabel"
                                 aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content" id="modaldark">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="myModalLabel">Tutorial Help</h4>
                                        </div>

                                        <div class="modal-body">
                                            If you have found any bugs or want any changes to the site, you can request
                                            it here. The Developers will read you request and see what can be done.  
                                      </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <button type="submit" id='submit' class="btn btn-outline-secondary">Submit</button>
                        </td>

                        <script>
                        // Validation JS
                            (function () {
                              'use strict'

                              // Fetch all the forms we want to apply custom Bootstrap validation styles to
                              var forms = document.querySelectorAll('.needs-validation')

                              // Loop over them and prevent submission
                              Array.prototype.slice.call(forms)
                                .forEach(function (form) {
                                  form.addEventListener('submit', function (event) {
                                    if (!form.checkValidity()) {
                                      event.preventDefault()
                                      event.stopPropagation()
                                    }

                                    form.classList.add('was-validated')
                                  }, false)
                                })
                            })()

                        </script>
                    </table>
                </div>
            </div>
        </form>
    </section>
</div>

<script>
    if(darkmode.isActivated()) {
        $('input[name="radioButton"][value="hello"]').prop('checked', true);
          $('#modaldark').removeClass("bg-light");
          $('#modaldark').addClass("bg-dark");
      };
      if(!darkmode.isActivated()) {
          $('#modaldark').removeClass("bg-dark");
          $('#modaldark').addClass("bg-light");
      };
</script>

