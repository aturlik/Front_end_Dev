<div class="container">
<section class="insert">
    <br>
	<div class="row">
		<div class="col d-flex justify-content-center">
			<h1 class="display-3">New Data Point</h1>
		</div>
	</div>
	<br>
	<form action="/insert" method="post">
	<div class="row mb-2">
		<div class="col">
			<input type="text" id="title" name="title" class="form-control" placeholder="Title" aria-label="title">
		</div>
		<div class="col">
			<input type="text" id="url" name="url" class="form-control" placeholder="URL" aria-label="url">
		</div>
	</div>
	<div class="row mb-2">
		<div class="col">
			<input type="text" id="TCH" name="TCH" class="form-control" placeholder="Time Commitment (Hours)" aria-label="TCH">
		</div>
		<div class="col">
			<input type="text" id="cost" name="cost" class="form-control" placeholder="Cost in $" aria-label="cost">
		</div>
		<div class="col" align="center">
			<div class="btn-group d-flex" role="group" aria-label="Self paced or instructor led">
				<input class="btn-check" type="radio" name="SPIL" id="SPILSelf">
				<label class="btn btn-outline-secondary" for="SPILSelf">
					Self-Paced
				</label>
				<input class="btn-check" type="radio" name="SPIL" id="SPILIns">
				<label class="btn btn-outline-secondary" for="SPILIns">
					Instructor Led
				</label>
			</div>	
		</div>
		<div class="col" align="center">
			<div class="btn-group d-flex" role="group" aria-label="Does training offer Certificate or Degree">
				<input class="btn-check" type="checkbox" name="CDP" value="Certificate" id="CDPCert">
				<label class="btn btn-outline-secondary" for="CDPCert">
					Certificate
				</label>			
				<input class="btn-check" type="checkbox" name="CDP" value="Degree" id="CDPDeg">
				<label class="btn btn-outline-secondary" for="CDPDeg">
					Degree
				</label>
			</div>	
		</div> 
	</div>
	<div class="row mb-2">
		<div class="btn-group d-flex" role="group" aria-label="Barrier to Entry Select">
			<input type="radio" class="btn-check" name="BE" id="BEBeg" autocomplete="off" checked>
			<label class="btn btn-outline-secondary" for="BEBeg">Beginner</label>
			<input type="radio" class="btn-check" name="BE" id="BEInter" autocomplete="off">
			<label class="btn btn-outline-secondary" for="BEInter">Intermediate</label>
			<input type="radio" class="btn-check" name="BE" id="BEAdv" autocomplete="off">
			<label class="btn btn-outline-secondary" for="BEAdv">Advanced</label>
			<input type="radio" class="btn-check" name="BE" id="BEExp" autocomplete="off">
			<label class="btn btn-outline-secondary" for="BEExp">Expert</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col">
			<div class="btn-group d-flex" role="group" aria-label="Public or DOD">
				<input type="radio" class="btn-check" name="PDOD" id="PDODP" autocomplete="off" checked>
				<label class="btn btn-outline-secondary" for="PDODP">Public</label>
				<input type="radio" class="btn-check" name="PDOD" id="PDODD" autocomplete="off">
				<label class="btn btn-outline-secondary" for="PDODD">DOD</label>
			</div>
		</div>
		<div class="col">	
			<input type="text" id="provider" name="provider" class="form-control" placeholder="Service/Training Provider" aria-label="Provider">
		</div>
		<div class="col">	
			<input type="text" id="BOO" name="BOO" class="form-control" placeholder="Location of Provider" aria-label="Location of Provider">
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-4">
			<div class="btn-group d-flex" role="group" aria-label="Public or DOD">
				<input type="radio" class="btn-check" name="PR" id="PRR" autocomplete="off" checked>
				<label class="btn btn-outline-secondary" for="PRR">Remote</label>
				<input type="radio" class="btn-check" name="PR" id="PRP" autocomplete="off">
				<label class="btn btn-outline-secondary" for="PRP">In Person</label>
			</div>
		</div>
		<div class="col">
			<div class="btn-group d-flex" role="group" aria-label="Learning Type">
				<input class="btn-check" type="checkbox" name="LT" value="Text" id="LTT">
				<label class="btn btn-outline-secondary" for="LTT">Text</label>
				<input class="btn-check" type="checkbox" name="LT" value="Video" id="LTV">
				<label class="btn btn-outline-secondary" for="LTV">Video</label>
				<input class="btn-check" type="checkbox" name="LT" value="Book" id="LTB">
				<label class="btn btn-outline-secondary" for="LTB">Book</label>
				<input class="btn-check" type="checkbox" name="LT" value="Lecture" id="LTL">
				<label class="btn btn-outline-secondary" for="LTL">Lecture</label>
				<input class="btn-check" type="checkbox" name="LT" value="Classroom" id="LTC">
				<label class="btn btn-outline-secondary" for="LTC">Classroom</label>
				<input class="btn-check" type="checkbox" name="LT" value="Interactive" id="LTI">
				<label class="btn btn-outline-secondary" for="LTI">Interactive</label>
			</div>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col">
			<div class="accordion" id="accordionExample">
				<div class="accordion-item">
					<h2 class="accordion-header" id="headingOne">
						<button class="collapsible" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
							<small class="text-muted" style="vertical-align: top;">Data Topics</small>	
						</button>
					</h2>
					<div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
						<div class="accordion-body">
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row mb-2">
		<div class="col">
  			<textarea class="form-control" id="comment" name="comment" placeholder="Put any comments here"  rows="3"></textarea>
		</div>
	</div>



     
        <div class="box">
            <h5 class="custom">Provider:</h5>
            <input type="text" id="provider" name="provider" class="translucent">
        </div>
        <br>
        <div class="box">
            <h5 class="custom">Cost:</h5>
            <input type="text" id="cost" name="cost" class="translucent">
        </div>
        <br>
        <div class="box">
            <h5 class="custom">Public/DOD:</h5>
            <input type="text" id="PDOD" name="PDOD" class="translucent">
        </div><br>
        
        <div class="box">
            <h5 class="custom">Certificate/Degree Program:</h5>
            <input type="text" id="CDP" name="CDP" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Data Topic Area:</h5>
            <input type="text" id="DTA" name="DTA" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Programming Language:</h5>
            <input type="text" id="PL" name="PL" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Base of Operations:</h5>
            <input type="text" id="BOO" name="BOO" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Barrier to Entry:</h5>
            <input type="text" id="BE" name="BE" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Self Paced vs Instructor Led:</h5>
            <input type="text" id="SPIL" name="SPIL" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Learning type:</h5>
            <input type="text" id="LT" name="LT" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">In person vs Remote:</h5>
            <input type="text" id="PR" name="PR" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Useful Training: </h5>
            <input type="text" id="UT" name="UT" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Comment:</h5>
            <input type="text" id="comment" name="comment" class="translucent">
        </div><br>
        <div class="box">
            <h5 class="custom">Topics for Graphing:</h5>
            <input type="text" id="TG" name="TG" class="translucent">
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" style="margin:20px"  class="btn btn-secondary">Submit</button>
        </div>
    </form>
</section>

