<!--The start of the accordion style content-->
<section class="results" id="accordionItems">
    {{# each items }}
    <!--Adding how many terms there are-->
    <div>
        {{#if @last}}
        <div class="pos">There are <span id="result"></span> results</div>

        <script>
            var position = {{@index}}
            document.getElementById("result").innerHTML = position + 1;
        </script>
        {{/if}}
    </div>

    <div class="item">
        <div class="collapsible-heading">
            <table>
                <tr>
                    <p>{{this.Title}}</p>
                </tr>
                <tr>
                    <button class="collapsible" type="button" data-bs-toggle="collapse" data-bs-target="#collapseItemDetails{{this._id}}" aria-expanded="false" aria-controls="collapseItemDetails{{this._id}}">
                        <p> Details <i class="arrow down"></i></p>
                    </button>
                    <button class="collapsible" type="button" data-bs-toggle="collapse" data-bs-target="#collapseItemAcc{{this._id}}" aria-expanded="false" aria-controls="collapseItemAcc{{this._id}}">
                        <p> Accessibility <i class="arrow down"></i></p>
                    </button>
                </tr>
            </table>
        </div>
        <div id="collapseItemDetails{{this._id}}" class="accordion-collapse collapse" aria-labelledby="collapseItem item" data-bs-parent="#accordionItems">
            <div class="accordion-body">
                <div>Time Commitment (Hours): {{ this.[Time Commitment (Hours)] }}</div>
                <div>Certificate/Degree Program: {{ this.[Certificate/Degree Program] }}</div>
                <div>Data Topic Area: {{ this.[Data Topic Area] }}</div>
                <div>Programming Language: {{ this.[Programming Language] }}</div>
                <div>Barrier to Entry: {{ this.[Barrier to Entry] }}</div>
                <div>Self Paced vs Instructor Led: {{ this.[Self Paced vs Instructor Led] }}</div>
                <div>Learning type: {{ this.[Learning type] }}</div>
                <div>Useful Training?: {{ this.[Useful Training?] }}</div>
                <div>Comment: {{ this.Comment }}</div>
                <br>
            </div>
        </div>
        <div id="collapseItemAcc{{this._id}}" class="accordion-collapse collapse" aria-labelledby="collapseItem item" data-bs-parent="#accordionItems">
            <div class="accordion-body">
                <div>URL: {{ this.URL }}</div>
                <div>Provider: {{ this.Provider }}</div>
                <div>Cost: {{ this.Cost }}</div>
                <div>Public/DOD: {{ this.[Public/DOD] }}</div>
                <div>Base of Operations: {{ this.[Base of Operations] }}</div>
                <div>In person vs Remote: {{ this.[In person vs Remote] }}</div>
                <div>Topics for Graphing: {{ this.[Topics for Graphing] }}</div>
                <div>ID: {{ this._id }}</div>
                <br>
            </div>
        </div>
    </div>

    {{/each}}
</section>


